<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path('background.jpg')%>);">
  <div class="container">
    <h1>Save any kind of movies!</h1>
    <p>Superheros</p>
  </div>
</div>
<br>
<div class="container">
  <div>
    <h2>My Lists</h2>
  </div>
  <div class="cards">
    <% images = ["horror.jpg", "comedy.jpg", "heros"] %>
    <% @lists.each_with_index do |list, index| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path(images[index])%>)">
        <div class="flex">
          <%= link_to list.name, list_path(list) %>
          <%= link_to "delete", list_path(list), method: :delete, class: "btn btn-ghost"%>
        </div>
      </div>
    <% end %>
  </div>
  <br>
  <%= link_to "Create a movie List", new_list_path, class: "btn btn-success" %>
</div>
